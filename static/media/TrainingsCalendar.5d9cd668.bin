import React, { useState, useEffect } from 'react';
import FullCalendar from '@fullcalendar/react';
import dayGridPlugin from '@fullcalendar/daygrid';
import listPlugin from '@fullcalendar/list';
import dayjs from 'dayjs';

    export default function TrainingsCalendar() {

    const [training, setTraining] = useState([]);

        const fetchData = () => {
            fetch('https://customerrest.herokuapp.com/gettrainings')
                .then(response => response.json())
                .then(data => setTraining(data))
    }

            useEffect(() => {
                fetchData();
            }, [])

    return (

        <div style={{ width: '100%', marginLeft: '1%' }}>

            <FullCalendar
                locale={'fi'}
                height={600}
                headerToolbar={{
                    start: "today previous next",
                    center: "title",
                    end: "dayGridMonth dayGridWeek dayGridDay listWeek"
                }}

                        plugins={[dayGridPlugin, listPlugin]}
                        views={
                            ["dayGridMonth", "dayGridWeek", "dayGridDay", "listWeek"]
                }

                    initialView="dayGridMonth"
                    firstDay={1}
                    events={training}
                    eventDataTransform={function (event) {
                        event.title = event.activity + ' / ' + event.customer.firstname + ' ' + event.customer.lastname;
                        event.start = event.date;
                        event.end = dayjs(event.date).add(event.duration, 'minutes').toISOString();
                        return event;
                    }}

                    eventTimeFormat={{
                        hour: '2-digit',
                        minute: '2-digit',
                        hour12: false

                    }}
                    eventDisplay={'block'}
                    eventColor={'#1769aa'}
                    displayEventEnd={true}
                    />
        </div>
    )
}